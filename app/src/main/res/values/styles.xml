<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Success">
        <!--<item name="textBold">true</item>-->
        <item name="textColor">#fff</item>
        <!--<item name="textFont">@font/dosier</item>-->
        <item name="textSize">14sp</item>
        <item name="colorBackground">@color/colorGreen</item>
        <item name="solidBackground">true</item>

        <item name="iconLeft">@drawable/ic_done_black_24dp</item>
        <item name="length">SHORT</item>         ENUM: LONG | SHORT
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="Error">
    <!--<item name="textBold">true</item>-->
    <item name="textColor">#fff</item>
    <!--<item name="textFont">@font/dosier</item>-->
    <item name="textSize">14sp</item>
    <item name="colorBackground">@color/colorRed</item>
    <item name="solidBackground">true</item>

    <item name="iconLeft">@drawable/ic_error_black_24dp</item>
    <item name="length">SHORT</item>         ENUM: LONG | SHORT
    </style>


    <style name="KyanbasDark">
        <!--<item name="textBold">true</item>-->
        <item name="textColor">#fff</item>
        <!--<item name="textFont">@font/dosier</item>-->
        <item name="textSize">14sp</item>
        <item name="colorBackground">@color/colorPrimaryDark</item>
        <item name="solidBackground">true</item>

    </style>



</resources>
