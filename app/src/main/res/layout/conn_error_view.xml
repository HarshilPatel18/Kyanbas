<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="15dp"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/connErrorText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="273dp"
        android:layout_marginEnd="27dp"
        android:layout_marginStart="27dp"
        android:fontFamily="@font/robotoregular"
        android:gravity="center"
        android:text="Oops !\n No Internet Connection"
        android:textColor="#454545"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewConnError" />

    <ImageView
        android:id="@+id/imageViewConnError"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="227dp"
        app:layout_constraintBottom_toTopOf="@+id/connErrorText"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.27999997"
        app:srcCompat="@drawable/ic_broken_paper" />

</android.support.constraint.ConstraintLayout>